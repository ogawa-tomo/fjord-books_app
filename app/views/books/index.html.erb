<p id="notice"><%= notice %></p>

<h1><%= t('activerecord.models.book').pluralize(Rails.application.config.i18n.default_locale) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.book.title') %></th>
      <th><%= t('activerecord.attributes.book.memo') %></th>
      <th><%= t('activerecord.attributes.book.author') %></th>
      <th><%= t('activerecord.attributes.book.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('common.show'), book %></td>
        <td><%= link_to t('common.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('common.destroy'), book, method: :delete, data: { confirm: t('.delete_confirmation_message') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_book'), new_book_path %>
